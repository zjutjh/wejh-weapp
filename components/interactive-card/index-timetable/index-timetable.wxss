.timetable-card {
  display: flex;
  flex-direction: column;
  align-items: stretch;
  overflow: hidden;
}

.timetable-card .timetable-item {
  display: flex;
  flex-direction: row;
  height: 120rpx;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px dotted #e5e5e5;
}

.timetable-card .timetable-item:last-child {
  border-bottom: none;
}

.timetable-card .timetable-item .main-info {
  display: flex;
  flex-direction: column;
  justify-content: stretch;
  flex: 2;
  margin-right: 12rpx;
  overflow: hidden;
}

.timetable-card .timetable-item .main-info .name {
  font-size: 32rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.timetable-card .timetable-item .main-info .info {
  color: #666;
}

.timetable-card .timetable-item .main-info .info.red {
  color: #e78ab0;
}

.timetable-card .timetable-item .main-info .info.blue {
  color: #73b4ef;
}

.timetable-card .timetable-item .main-info .info text {
  color: unset;
  font-size: 24rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.timetable-card .timetable-item .main-info .info text.iconfont {
  margin-right: 8rpx;
}

.timetable-card .timetable-item .sub-info {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  min-width: 232rpx;
  max-width: 70%;
  overflow: hidden;
  text-align: right;
}

.timetable-card .timetable-item .sub-info .place {
  font-size: 32rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.timetable-card .timetable-item .sub-info .info {
  font-size: 24rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  color: #666;
}

.timetable-card .timetable-nothing {
  padding: 30rpx 0;
  font-size: 32rpx;
  text-align: center;
}

.timetable-bottom {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 72rpx;
}

.timetable-bottom text {
  font-size: 24rpx;
  color: #7f848a;
}
